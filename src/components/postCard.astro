---
import { Image } from "astro:assets";

const { post } = Astro.props;
const { data } = post;
---

<div class="flex flex-row">
  <a class="mb-6 no-underline mr-4" href=`/blog/${post.slug}`>
    <Image width={300} height={514} src={data.image} alt={data.description} />
  </a>
  <a class="mb-6 no-underline" href=`/blog/${post.slug}`>
    <h1 class="font-bold mb-0 underline">{data.title}</h1>
    <p class="text-xs mt-0">
      Published on {new Date(data.date).toDateString()}
    </p>
    <p>{data.description}</p>
  </a>
</div>
