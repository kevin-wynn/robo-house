---
import { Image } from "astro:assets";

const { post } = Astro.props;
const { data } = post;
---

<div class="flex flex-row">
  <a class="mb-6 no-underline mr-4 w-1/3" href=`/blog/${post.slug}`>
    <Image
      class="w-full"
      width={300}
      height={168}
      src={data.image}
      alt={data.description}
    />
  </a>
  <a class="mb-6 no-underline w-2/3" href=`/blog/${post.slug}`>
    <h1 class="font-bold mb-0 underline">{data.title}</h1>
    <p class="text-xs mt-0">
      Published on {new Date(data.date).toDateString()}
    </p>
    <p>{data.description}</p>
  </a>
</div>
